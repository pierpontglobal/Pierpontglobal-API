{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/users": {
      "post": {
        "summary": "Registers a new user to the application",
        "tags": [
          "User"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                },
                "phone_number": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password",
                "username",
                "phone_number"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created"
          },
          "400": {
            "description": "There was something wrong with your request"
          }
        }
      },
      "patch": {
        "summary": "Updates the user information",
        "tags": [
          "User"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "heading",
            "type": "string"
          },
          {
            "name": "User",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "street_address": {
                  "type": "string"
                },
                "phone_number": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User updated"
          }
        }
      }
    }
  }
}